<Page
    x:Class="Practice.Pages.LessonXI.Example1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Practice.Pages.LessonXI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Example1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Slider
                x:Name="sl1"
                Width="300"
                IsSnapToTickEnabled="True"
                Maximum="100"
                Minimum="1" />
            <TextBlock Text="{Binding ElementName=sl1, Path=Value}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Slider
                x:Name="sl2"
                Width="300"
                IsSnapToTickEnabled="True"
                Maximum="100"
                Minimum="1" />
            <TextBlock Text="{Binding ElementName=sl2, Path=Value}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Slider
                x:Name="sl3"
                Width="300"
                IsSnapToTickEnabled="True"
                Maximum="100"
                Minimum="1" />
            <TextBlock Text="{Binding ElementName=sl3, Path=Value}" />
        </StackPanel>
    </StackPanel>
</Page>
