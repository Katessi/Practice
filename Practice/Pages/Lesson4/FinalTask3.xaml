<Page
    x:Class="Practice.Pages.Lesson4.FinalTask3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Practice.Pages.Lesson4"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FinalTask3"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBox x:Name="t1" Text="{Binding ElementName=lvalue, Path=Content}" />
            <TextBox x:Name="t2" Text="{Binding ElementName=lvalue, Path=Content}" />
            <Slider
                x:Name="slider1"
                Maximum="50"
                Minimum="20"
                Value="{Binding ElementName=lvalue, Path=Content, Mode=TwoWay}" />
            <Slider
                x:Name="slider2"
                Maximum="50"
                Minimum="20"
                Value="{Binding ElementName=lvalue, Path=Content, Mode=TwoWay}" />
            <TextBox
                x:Name="txtf"
                FontSize="{Binding ElementName=lvalue, Path=Content, Mode=TwoWay}"
                Text="{Binding ElementName=lvalue, Path=Content, Mode=TwoWay}" />
            <Label x:Name="lvalue" Visibility="Hidden" />
        </StackPanel>
    </Grid>
</Page>
