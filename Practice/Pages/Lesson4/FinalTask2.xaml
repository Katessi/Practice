<Page
    x:Class="Practice.Pages.Lesson4.FinalTask2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Practice.Pages.Lesson4"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FinalTask2"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBox x:Name="t1" Text="{Binding ElementName=slider1, Path=Value}" />
            <TextBox x:Name="t2" Text="{Binding ElementName=slider2, Path=Value}" />
            <Slider
                x:Name="slider1"
                Maximum="50"
                Minimum="20" />
            <Slider
                x:Name="slider2"
                Maximum="50"
                Minimum="20" />
        </StackPanel>
    </Grid>
</Page>
